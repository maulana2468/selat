<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE9E9E9"
    tools:context=".finish_payment.FinishPaymentActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        app:cardBackgroundColor="#DADADA"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_pembayaran_berhasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Pembayaran Berhasil!"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Order NoNf098"
                android:textColor="@color/grayTextSearch"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/text_pembayaran_berhasil"
                app:layout_constraintStart_toStartOf="@id/text_pembayaran_berhasil"
                app:layout_constraintTop_toBottomOf="@id/text_pembayaran_berhasil" />

            <View
                android:id="@+id/border_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="12dp"
                android:background="#FF000000"
                app:layout_constraintTop_toBottomOf="@id/order_num" />

            <TextView
                android:id="@+id/tanggal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12sp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Tanggal"
                android:textColor="@color/grayTextSearch"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/border_1" />

            <TextView
                android:id="@+id/date_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="24 September 2022"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tanggal_text" />

            <TextView
                android:id="@+id/waktu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:layout_marginEnd="36dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Waktu"
                android:textColor="@color/grayTextSearch"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/border_1" />

            <TextView
                android:id="@+id/time_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="36dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="12:37 AM"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tanggal_text" />

            <TextView
                android:id="@+id/pembayaran_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="30sp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Pembayaran"
                android:textColor="@color/grayTextSearch"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date_order" />

            <ImageView
                android:id="@+id/logo_payment"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/mastercard_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pembayaran_text" />

            <TextView
                android:id="@+id/no_rek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15.93dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="5282 3456 7890 1289"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/logo_payment"
                app:layout_constraintStart_toEndOf="@id/logo_payment"
                app:layout_constraintTop_toTopOf="@id/logo_payment" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/fluent_payment_20_filled"
                app:layout_constraintBottom_toBottomOf="@id/logo_payment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/logo_payment" />

            <TextView
                android:id="@+id/total_pembayaran_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="30sp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Total Pembayaran"
                android:textColor="@color/grayTextSearch"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logo_payment" />

            <TextView
                android:id="@+id/rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Rp."
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_pembayaran_text" />

            <ImageView
                android:id="@+id/cost"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/healthicons_money_bag"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_pembayaran_text" />

            <TextView
                android:id="@+id/pay_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="1.200.000"
                android:textColor="@color/black"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/cost"
                app:layout_constraintStart_toEndOf="@id/rp"
                app:layout_constraintTop_toTopOf="@+id/cost" />

            <androidx.cardview.widget.CardView
                android:id="@+id/finish_button"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginTop="42dp"
                app:cardBackgroundColor="#FF00296B"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pay_total">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Selesai"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="19dp"
                app:layout_constraintTop_toBottomOf="@id/finish_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <ImageView
        app:layout_constraintVertical_bias="0.167"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/bi_check_circle_fill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>