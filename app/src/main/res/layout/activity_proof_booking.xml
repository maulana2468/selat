<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFE9E9E9"
    android:layout_height="match_parent"
    tools:context=".proof_booking.ProofBookingActivity">

    <ImageView
        android:src="@drawable/expand_type"
        android:rotation="180"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="47dp"
        android:layout_marginStart="36dp"
        android:id="@+id/back_button_bp"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <TextView
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/back_button_bp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/back_button_bp"
        android:text="Bukti Pemesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/back_button_bp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tanggal"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="10sp"
                android:text="30 Oct 2022, 9:01 PM"
                android:textColor="#FF979797"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>

            <TextView
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:textColor="#FF979797"
                android:text="Order NoNf098"
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_marginTop="9dp"
            android:background="#FFBDBDBD"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_marginTop="13dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            android:textColor="#FF979797"
            android:text="Detail Pemesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:text="Nama Mobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:id="@+id/brand_target"
                android:text="Fortuner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:text="Merk Mobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:id="@+id/manufacturer_target"
                android:text="Toyota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:text="Lama Sewa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:id="@+id/rent_days_target"
                android:text="3 Hari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_marginTop="9dp"
            android:background="#FFBDBDBD"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_marginTop="22dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            android:textColor="#FF979797"
            android:text="Detail Pembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:text="Harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:id="@+id/price_total_target"
                android:text="1.200.000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_marginTop="9dp"
            android:background="#FFBDBDBD"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_num_account"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:text="Bayar Menggunakan\nxxxx xxxx xxxx 1298"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <TextView
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:id="@+id/price_total_target_2"
                android:text="1.200.000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_save_invoice"
        app:cardElevation="0dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginHorizontal="36dp"
        android:layout_marginBottom="23dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#FFFDC500"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="53dp">

        <TextView
            android:fontFamily="@font/montserrat_bold"
            android:layout_gravity="center"
            android:text="Simpan Bukti"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>