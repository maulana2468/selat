<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE9E9E9"
    tools:context=".profile.ProfileActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="45dp"
        android:contentDescription="Back Button"
        android:rotation="180"
        android:src="@drawable/expand_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_my_profile"
        android:text="Edit Profile"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_button" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photo_profile"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_my_profile">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image_view"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/user_name"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/photo_profile"
        android:text="User"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/free_user"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        android:text="Free User"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:id="@+id/full_name_cardview"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/free_user"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/full_name_icon"
                android:src="@drawable/akar_icons_person"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <View
                android:id="@+id/border_v_1"
                android:background="#FF979797"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toEndOf="@id/full_name_icon"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/full_name"
                android:text="Full Name"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="7dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/border_v_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:text="Firman Utina"
                android:background="@null"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/full_name"
                app:layout_constraintStart_toStartOf="@+id/full_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/email_cardview"
        app:cardElevation="0dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="27dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/full_name_cardview"
        android:layout_width="match_parent"
        android:layout_height="53dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/email_icon"
                android:src="@drawable/carbon_email"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <View
                android:id="@+id/border_v_2"
                android:background="#FF979797"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toEndOf="@id/email_icon"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/email"
                android:text="Email"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="7dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/border_v_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:text="firmanutina15@gmail.com"
                android:background="@null"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintStart_toStartOf="@+id/email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/password_cardview"
        app:cardElevation="0dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="27dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/email_cardview"
        android:layout_width="match_parent"
        android:layout_height="53dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/password_icon"
                android:src="@drawable/arcticons_password"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <View
                android:id="@+id/border_v_3"
                android:background="#FF979797"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toEndOf="@id/password_icon"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/password"
                android:text="Password"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="7dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/border_v_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:text="***************"
                android:background="@null"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/password"
                app:layout_constraintStart_toStartOf="@+id/password"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/phone_cardview"
        app:cardElevation="0dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="27dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/password_cardview"
        android:layout_width="match_parent"
        android:layout_height="53dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/phone_icon"
                android:src="@drawable/humbleicons_phone_call"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            <View
                android:id="@+id/border_v_4"
                android:background="#FF979797"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toEndOf="@id/phone_icon"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/phone"
                android:text="Nomor Telepon"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="7dp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/border_v_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:text="08121198xxx"
                android:background="@null"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone"
                app:layout_constraintStart_toStartOf="@+id/phone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    
    <LinearLayout
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/phone_cardview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#FFFFFFFF"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            android:layout_width="120dp"
            android:layout_height="35dp">

            <TextView
                android:fontFamily="@font/montserrat_medium"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
        
        <View
            android:layout_width="30dp"
            android:layout_height="0dp"/>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="#FF00296B"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            android:layout_width="120dp"
            android:layout_height="35dp">

            <TextView
                android:fontFamily="@font/montserrat_medium"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>