<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE9E9E9"
    tools:context=".profile.ProfileActivity">

    <com.factor.bouncy.BouncyNestedScrollView
        app:fling_animation_size=".7"
        app:overscroll_animation_size=".7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="45dp"
                android:contentDescription="Back Button"
                android:rotation="180"
                android:src="@drawable/expand_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Edit Profile"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/back_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/back_button" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/photo_profile"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginTop="56dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_my_profile">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_image_view"
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="User"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photo_profile" />

            <TextView
                android:id="@+id/free_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Free User"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_name" />

            <androidx.cardview.widget.CardView
                android:id="@+id/full_name_cardview"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="60dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/free_user">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/full_name_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="14dp"
                        android:src="@drawable/akar_icons_person"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/border_v_1"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="14dp"
                        android:background="#FF979797"
                        app:layout_constraintStart_toEndOf="@id/full_name_icon" />

                    <TextView
                        android:id="@+id/full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Full Name"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/border_v_1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/edit_text_full_name"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@null"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Firman Utina"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/full_name"
                        app:layout_constraintTop_toBottomOf="@id/full_name"
                        app:layout_constraintVertical_bias="0" />

                    <TextView
                        android:id="@+id/edited_full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="7dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="edited"
                        android:textColor="#FF808080"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/cancel_save_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/full_name_cardview">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cancel_full_name_button"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    app:cardBackgroundColor="#FFFFFFFF"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Cancel"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="30dp"
                    android:layout_height="0dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/save_full_name_button"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    app:cardBackgroundColor="#FF00296B"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/email_cardview"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="27dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/cancel_save_full_name">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/email_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="14dp"
                        android:src="@drawable/carbon_email"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/border_v_2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="14dp"
                        android:background="#FF979797"
                        app:layout_constraintStart_toEndOf="@id/email_icon" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/border_v_2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/edit_text_email"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@null"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="firmanutina15@gmail.com"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/email"
                        app:layout_constraintTop_toBottomOf="@id/email"
                        app:layout_constraintVertical_bias="0" />

                    <TextView
                        android:id="@+id/edited_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="7dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="edited"
                        android:textColor="#FF808080"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/cancel_save_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_cardview">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cancel_email_button"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    app:cardBackgroundColor="#FFFFFFFF"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Cancel"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="30dp"
                    android:layout_height="0dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/save_email_button"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    app:cardBackgroundColor="#FF00296B"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/password_cardview"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="27dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/cancel_save_email">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/password_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="14dp"
                        android:src="@drawable/arcticons_password"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/border_v_3"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="14dp"
                        android:background="#FF979797"
                        app:layout_constraintStart_toEndOf="@id/password_icon" />

                    <TextView
                        android:id="@+id/password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Password"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/border_v_3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@null"
                        android:clickable="false"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="***************"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/password"
                        app:layout_constraintTop_toBottomOf="@id/password"
                        app:layout_constraintVertical_bias="0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/phone_cardview"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="27dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/password_cardview">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/phone_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="14dp"
                        android:src="@drawable/humbleicons_phone_call"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/border_v_4"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="14dp"
                        android:background="#FF979797"
                        app:layout_constraintStart_toEndOf="@id/phone_icon" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Nomor Telepon"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/border_v_4"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:inputType="phone"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@null"
                        android:clickable="false"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="08121198726"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/phone"
                        app:layout_constraintTop_toBottomOf="@id/phone"
                        app:layout_constraintVertical_bias="0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/cancel_save_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone_cardview">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cancel_phone_button"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    app:cardBackgroundColor="#FFFFFFFF"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Cancel"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="30dp"
                    android:layout_height="0dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/save_phone_button"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    app:cardBackgroundColor="#FF00296B"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.factor.bouncy.BouncyNestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>