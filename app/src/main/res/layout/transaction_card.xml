<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="36dp"
    android:background="#FFE9E9E9"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tgl_order"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="30 Oct 2022, 9:01 PM"
        android:textColor="#FF979797"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/brand_order"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tgl_order"
        android:text="Fortuner"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rincian_mobil"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/brand_order"
        android:text="400.000 / Hari x 3 Hari"
        android:textColor="#FF979797"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/check_button"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FF00296B"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/rincian_mobil"
        android:layout_width="86.5dp"
        android:layout_height="22dp">

        <TextView
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="Check"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="9.22dp"
        android:id="@+id/rent_again_button"
        app:layout_constraintStart_toEndOf="@id/check_button"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FFFDC500"
        app:layout_constraintTop_toTopOf="@id/check_button"
        app:layout_constraintBottom_toBottomOf="@id/check_button"
        android:layout_width="86.5dp"
        android:layout_height="22dp">

        <TextView
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Rent Again"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/order_number"
        android:text="Order NoNf098"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        android:textColor="#FF979797"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/harga_total"
            android:text="1.150"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="k"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>