<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_dialog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Tambah metode pembayaran"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/target_logo_pm"
            android:layout_marginTop="8dp"
            android:src="@drawable/gopay_logo"
            android:layout_gravity="center"
            android:layout_width="64dp"
            android:layout_height="64dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="49dp"
            android:text="No Telp/Rekening"
            android:fontFamily="@font/montserrat_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edit_text_no"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            android:hint="Nomor"
            android:inputType="textPassword"
            android:layout_marginHorizontal="45dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/montserrat_medium"
            android:id="@+id/error_text"
            android:alpha="0"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:text="PIN Tidak Lengkap"
            android:textColor="#FFFF0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DEDEDE"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/ok_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:background="?selectableItemBackground"
                android:text="OKE"
                android:fontFamily="@font/montserrat_semibold"
                />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:background="?selectableItemBackground"
                android:text="BATAL"
                android:fontFamily="@font/montserrat_semibold"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>