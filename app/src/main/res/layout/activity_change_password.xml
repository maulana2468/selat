<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFE9E9E9"
    android:layout_height="match_parent"
    tools:context=".change_password.ChangePasswordActivity">

    <ImageView
        android:src="@drawable/expand_type"
        android:rotation="180"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="47dp"
        android:layout_marginStart="36dp"
        android:id="@+id/back_button_change_password"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <TextView
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/back_button_change_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/back_button_change_password"
        android:text="Ubah Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/border"
        app:layout_constraintTop_toBottomOf="@id/back_button_change_password"
        android:layout_width="match_parent"
        android:layout_height="28dp"/>

    <TextView
        android:id="@+id/desc_change_password"
        app:layout_constraintTop_toBottomOf="@id/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:textSize="12sp"
        android:text="Kami akan mengirimkan konfirmasi email untuk dilakukan reset password. Cek kotak masuk atau spam untuk langkah lanjut"
        android:layout_marginBottom="46dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_send_email"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FF00296B"
        android:layout_marginTop="24dp"
        android:layout_width="125dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc_change_password">

        <TextView
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="Kirim Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>