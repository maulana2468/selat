<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/invoice_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/logo_inv"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/logo_selat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Selat"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/logo_inv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Sewa Mobil Kilat"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/logo_inv"
        app:layout_constraintTop_toBottomOf="@id/name_company" />

    <TextView
        android:textSize="8sp"
        android:textColor="@color/black"
        android:text="selat_app@gmail.com\n+62 8125435353"
        android:id="@id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logo_inv"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
         />

    <TextView
        android:id="@+id/invoice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="72dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Invoice"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/invoice_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invoice No:"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/invoice_text"
        app:layout_constraintTop_toBottomOf="@+id/invoice_text" />

    <TextView
        android:id="@+id/date_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Order:"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/invoice_no"
        app:layout_constraintTop_toBottomOf="@+id/invoice_no" />

    <TextView
        android:id="@+id/kepada_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Kepada"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_inv" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kepada_text" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metode Pembayaran:"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/kepada_text"
        app:layout_constraintStart_toStartOf="@+id/date_order"
        app:layout_constraintTop_toTopOf="@+id/kepada_text" />

    <TextView
        android:id="@+id/number_value_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXXXXXXXXX"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView

        android:id="@+id/jns_pembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CARD//CC"
        android:textColor="@color/black"
        android:textSize="8dp"
        app:layout_constraintStart_toStartOf="@+id/number_value_price"
        app:layout_constraintTop_toBottomOf="@+id/number_value_price" />

    <TableLayout

        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jns_pembayaran">

        <TableRow>

            <TextView
                android:layout_gravity="center"
                android:padding="3dip"
                android:text="Mobil yang disewa\n(Manufacturer - Brand)"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:textStyle="bold" />

            <View
                android:layout_height="0dp"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_gravity="start|center_vertical"
                android:padding="3dip"
                android:text="Harga"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:textStyle="bold" />

            <View
                android:layout_height="0dp"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:layout_gravity="center"
                android:padding="3dip"
                android:text="Hari Sewa"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:textStyle="bold" />

            <View
                android:layout_height="0dp"
                android:layout_marginHorizontal="30dp" />

            <TextView
                android:layout_gravity="start"
                android:padding="3dip"
                android:text=""
                android:textColor="@color/black"
                android:textSize="8sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/brand_manufacturer_target"
                android:layout_gravity="start"
                android:fontFamily="@font/montserrat_medium"
                android:padding="3dip"
                android:text="Toyota - Fortuner"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <View
                android:layout_height="0dp"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:id="@+id/price_target"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_medium"
                android:padding="3dip"
                android:text="Rp200.000"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <View
                android:layout_height="0dp"
                android:layout_marginHorizontal="15dp" />

            <TextView
                android:id="@+id/rent_days_target"
                android:layout_gravity="start"
                android:fontFamily="@font/montserrat_medium"
                android:padding="3dip"
                android:text="3 hari"
                android:textColor="@color/black"
                android:textSize="8sp" />

            <View
                android:layout_height="0dp"
                android:layout_marginHorizontal="30dp" />

            <TextView
                android:id="@+id/total_price"
                android:layout_gravity="start"
                android:fontFamily="@font/montserrat_medium"
                android:padding="3dip"
                android:text="Rp600.000"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <TextView
        android:textColor="@color/black"
        android:textSize="8sp"
        android:layout_marginTop="64dp"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="(Penanggung Jawab)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>